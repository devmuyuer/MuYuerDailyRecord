<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_top_height"
        android:id="@+id/head_layout">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btn_back"
            android:background="@drawable/back"
            android:layout_marginLeft="@dimen/strand_margin_frame_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:gravity="center"
            android:text="费用明细"
            style="@style/app_txt_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:textSize="@dimen/font_size_20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/strand_margin_frame"
            android:src="@drawable/icon" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bill_data_bottom_height"
            android:orientation="vertical"
            android:layout_margin="@dimen/strand_margin_frame"
            android:id="@+id/buttom_layout">

            <TextView
                android:gravity=""
                android:text="收入"
                android:id="@+id/txtAmountTile"
                style="@style/app_txt_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:textSize="@dimen/font_size_20"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30">

                <TextView
                    android:gravity="left"
                    android:text="2019-01-01"
                    style="@style/app_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddTime"
                    android:textSize="@dimen/font_size_18"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:gravity="right"
                    android:text="500.00"
                    style="@style/app_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tvBill"
                    android:textSize="@dimen/font_size_18"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:text="备注"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/tvContent"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
