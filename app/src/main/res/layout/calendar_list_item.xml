<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/background_calendar_item"
    android:orientation="vertical"
    skin:enable="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/strand_margin_frame"
        android:layout_marginRight="@dimen/strand_margin_frame"
        android:layout_marginTop="@dimen/size_7"
        android:layout_marginBottom="@dimen/size_7">


        <ImageView
            android:id="@+id/imgbill"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="7000.00"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/txtAmountTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@+id/txtMoney"
            android:layout_alignBottom="@+id/txtMoney"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_toEndOf="@+id/imgbill"
            android:layout_toRightOf="@+id/imgbill"
            android:text="R网购"
            android:textColor="@color/font_color"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>