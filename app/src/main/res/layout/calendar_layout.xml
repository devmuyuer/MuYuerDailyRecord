<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_color"
    tools:context="yao.muyuer.dailyrecord.activity.CalendarActivity"
    skin:enable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_top_height"
        android:id="@+id/head_layout">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btn_back"
            android:background="@drawable/back"
            android:layout_marginLeft="@dimen/strand_margin_frame_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:gravity="center"
            android:text="2016/10/10"
            style="@style/app_txt_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/celendar_title"
            android:textSize="@dimen/font_size_20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="@color/font_color"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="@color/font_color"
            />

    </LinearLayout>

    <yao.muyuer.library.calendar.CalendarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <yao.muyuer.library.calendar.CalendarDateView
            android:id="@+id/calendarDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ListView
            android:id="@+id/celendar_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:divider="@null"
            />


    </yao.muyuer.library.calendar.CalendarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/celendar_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="10月2日"
            android:background="@color/nav_default_color"
            android:textColor="@color/font_color"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lladd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivadd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2016年10月10日无记账记录"
            android:textColor="@color/font_color"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击添加一笔"
            android:textColor="@color/md_green_400"
            />

    </LinearLayout>



</LinearLayout>
